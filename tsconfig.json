{
    "compilerOptions": {

        "outDir": "./lib/",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "typings",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/test"
    ]
}
